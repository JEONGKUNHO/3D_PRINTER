<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:id="@+id/toon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".page_1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            >
            <Button
                android:id="@+id/order"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="제품의뢰하기"
                android:textStyle="bold"
                android:textColor="@color/color_Toolbar"
                android:layout_gravity="center"
                android:textSize="50dp"
                android:background="#b7dcfb"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="인기 상품"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="1dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="200dp"
                android:background="@drawable/main_2"
                android:layout_margin="1dp"
                android:layout_height="200dp"></ImageButton>

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="200dp"
                android:background="@drawable/main_3"
                android:layout_margin="1dp"
                android:layout_height="200dp"></ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:layout_margin="1dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="200dp"
                android:background="@drawable/main_1"
                android:layout_margin="1dp"
                android:layout_height="200dp"></ImageButton>

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="200dp"
                android:background="@drawable/main_4"
                android:layout_margin="1dp"
                android:layout_height="200dp"></ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"

            android:layout_margin="1dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/button5"
                android:layout_width="200dp"
                android:background="@drawable/main_5"
                android:layout_margin="1dp"
                android:layout_height="200dp"></ImageButton>

            <ImageButton
                android:id="@+id/button6"
                android:layout_width="200dp"
                android:background="@drawable/main_6"
                android:layout_margin="1dp"
                android:layout_height="200dp"></ImageButton>
        </LinearLayout>


    </LinearLayout>
</ScrollView>